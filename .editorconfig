# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
tab_width = 4

[.editorconfig]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = space
indent_size = 4
